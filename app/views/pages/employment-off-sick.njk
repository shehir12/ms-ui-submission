{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('employment-off-sick:pageTitle', employerName) }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'offSick',
        fieldset: {
            legend: {
                text: t('employment-off-sick:offSick.label', employerName),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        casaValue: formData.offSick,
        casaErrors: formErrors,
        items: [{
            value: 'yes',
            text: t('app:yes'),
            attributes: {
                'data-question': t('employment-off-sick:offSick.label', employerName),
                'data-answer': t('app:yes')
            }
        }, {
            value: 'no',
            text: t('app:no'),
            attributes: {
                'data-question': t('employment-off-sick:offSick.label', employerName),
                'data-answer': t('app:no')
            }
        }]
    }) }}

{% endblock %}
