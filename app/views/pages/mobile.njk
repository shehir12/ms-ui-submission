{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}
{% from "casa/components/input/macro.njk" import casaGovukInput with context %}

{% block casaPageTitle %}
    {{ t('mobile:pageTitle') }}
{% endblock %}

{% block journey_form %}

    {% set mobile %}
        {{ casaGovukInput({
            label: {
                text: t('mobile:number.label')
            },
            name: 'number',
            classes: 'govuk-!-width-one-half',
            value: formData.number,
            casaErrors: formErrors
        }) }}
    {% endset -%}

    {{ casaGovukRadios({
        name: 'mobile',
        fieldset: {
            legend: {
                text: t('mobile:mobile.label'),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        hint: {
            text: t('mobile:mobile.hint')
        },
        casaValue: formData.mobile,
        casaErrors: formErrors,
        items: [{
            value: 'yes',
            text: t('app:yes'),
            attributes: {
                'data-question': t('mobile:mobile.label'),
                'data-answer': t('app:yes')
            },
            conditional: {
                html: mobile
            }
        }, {
            value: 'no',
            text: t('app:no'),
            attributes: {
                'data-question': t('mobile:mobile.label'),
                'data-answer': t('app:no')
            }
        }]
    }) }}

{% endblock %}
