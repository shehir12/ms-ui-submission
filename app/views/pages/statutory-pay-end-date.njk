{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('statutory-pay-end-date:pageTitle') }}
{% endblock %}

{% block journey_form %}
    {{ casaGovukRadios({
        name: 'statutoryPayEndDate',
        fieldset: {
            legend: {
                text: t('statutory-pay-end-date:label'),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        casaValue: formData.statutoryPayEndDate,
        casaErrors: formErrors,
        items: [{
            text: t('app:yes'),
            value: 'yes',
            attributes: {
                'data-question': t('statutory-pay-end-date:label', statutoryPayType),
                'data-answer': t('app:yes')
            }
        }, {
            text: t('app:no'),
            value: 'no',
            attributes: {
                'data-question': t('statutory-pay-end-date:label', statutoryPayType),
                'data-answer': t('app:no')
            }
        }]
    }) }}
{% endblock %}
